<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".GetUsuarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ETCORREOUSUARIO_B"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ingrese Correo"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/BTNBUSCARUSUARIO_B"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#D81B60"
            android:onClick="buscarUsuario"
            android:text="BUSCAR"
            app:icon="@android:drawable/ic_menu_search" />
    </LinearLayout>

    <EditText
        android:id="@+id/ETCORREOUSUARIO_E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Ingrese Correo"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ETNOMBREUSUARIO_E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="Ingrese Nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ETAPELLIDOUSUARIO_E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ingrese Apellido"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/BTNACTUALIZAR_USUARIO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="#43A047"
        android:onClick="actualizarUsuario"
        android:text="ACTUALIZAR"
        app:icon="?attr/actionModeCopyDrawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BTNLISTAR_USUARIO"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#039BE5"
            android:onClick="listarUsuario"
            android:text="LISTAR"
            app:icon="?attr/actionModePasteDrawable" />

        <Button
            android:id="@+id/BTNCERRAR_USUARIO"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ED0606"
            android:onClick="cerrarUsuario"
            android:text="CERRAR"
            app:icon="@android:drawable/ic_menu_close_clear_cancel" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".GetProveedorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/EDTCODIGOPROVEEDOR_B"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Ingrese Codigo"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/BTNBUSCARPROVEEDOR_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#D81B60"
            android:onClick="buscarProveedor"
            android:text="BUSCAR"
            app:icon="@android:drawable/ic_menu_search" />
    </LinearLayout>

    <EditText
        android:id="@+id/EDTCODIGOPROVEEDOR_E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Ingrese Codigo"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/EDTNOMBREPROVEEDOR_E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="Ingrese Nombre"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/EDTDESCRIPCIONPROVEEDOR_E"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="Ingrese Descripcion"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/BTNACTUALIZARPROVEEDOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="#43A047"
        android:onClick="actualizarProveedor"
        android:text="ACTUALIZAR"
        app:icon="?attr/actionModeCopyDrawable" />
</LinearLayout>